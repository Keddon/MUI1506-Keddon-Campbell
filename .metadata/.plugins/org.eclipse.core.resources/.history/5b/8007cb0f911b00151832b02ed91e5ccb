	viewShadowColor:"#606060",
	viewShadowOffset: (2,-3),
});


var convertFrom = Titanium.UI.createView({
	top: 100,
	left: 20,
	width: "25%",
	height: "10%",
	borderReadius: 15,
	backgroundColor: "#fff",
});

